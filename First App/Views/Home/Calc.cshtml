@{
}
<form action="Calc">
    <input type="number" name="a" required />
    <input type="number" name="b" required />
    <select name="o">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="/">/</option>
        <option value="*">*</option>
        <option value="^">^</option>
    </select>

    <button type="submit">Wyślij</button>
    <input type="hidden" name="ans" value=@ViewBag.equals/>
</form>
@{
    try
    {
        string[] ans = ViewBag.equals.Split("|");
        foreach (string answer in ans)
        {
            <p>@answer</p>
        }
    }
    catch { }
}