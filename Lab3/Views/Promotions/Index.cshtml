@model List<PromotionModel>
@{

    <a class="btn btn-primary" asp-area="" asp-controller="Promotions" asp-action="PromotionForm">Dodaj</a>

    @if (Model != null)
    {

        <table class="table">
            @foreach (PromotionModel promotion in @Model)
            {
                <tr>
                    <td>@promotion.GameName</td>
                    <td>@promotion.RegularPrice</td>
                    <td>-@promotion.Discount%</td>
                    <td>@promotion.PriceOnSale</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@promotion.Id" class=" btn btn-danger">zakończ promocję</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@promotion.Id" class=" btn btn-primary">edytuj</a>
                    </td>

                </tr>
            }
        </table>
    }
    else
    {
        <div>brak promocji</div>
    }
}
